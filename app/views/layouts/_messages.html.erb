<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>

    <% info_csu = Rails.application.secrets[:idp_for_production_instance] ? 'CSU Produkcja' : 'CSU Testowe' %>

    <script type="text/javascript">

      toastr.options = {
        "closeButton": false,
        "debug": true,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
      }

      toastr['<%= flash_class_name(name) %>']('<%= msg %>', '<%= info_csu %>' )

    </script>
  <% end %>
<% end %>


<div class="container bg-uke-authorization_<%= user_signed_in? %>">
  <% unless user_signed_in? %>
    <h2 class="center">Wymagana autoryzacja</h2>
  <% else %>
    <h3 class="center"><%= current_user.first_name %> <%= current_user.last_name %>, <%= current_user.email %></h3>
  <% end %>


  <ul class="timeline">

    <%= render "login_esod", cached: true %>
    <%= render "login_pue", cached: true %>
    <%= render "login_pit", cached: true %>
    <%= render "login_intranet", cached: true %>
    <%= render "login_szkolenia", cached: true %>
    <%= render "login_netpar2015", cached: true %>
    <%= render "login_pola", cached: true %>

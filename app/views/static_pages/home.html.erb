<div class="container-fluid">
  
  <div class="row">
    <div class="col-sm-6 bg-uke-authorization_<%= user_signed_in? %>">
      <br>
      <% unless user_signed_in? %>
        <h3 class="center"><%= fa_icon('lock', text: ' Wymagana autoryzacja' ) %></h3>
      <% else %>
        <h3 class="center"><%= fa_icon('unlock', text: " #{current_user.first_name} #{current_user.last_name}, #{current_user.email}" ) %></h3>
      <% end %>


      <ul class="timeline">

        <% if Rails.application.secrets[:idp_for_production_instance] %>

          <%= render "login_csuext", cached: true  if (show_bi) %>
          <%= render "login_esod", cached: true %>
          <%= render "login_esod_admin", cached: true if (show_bi) %> 
          <%= render "login_pue", cached: true %>
          <%= render "login_pue_adm", cached: true if (show_bi) %>
          <%= render "login_cbo_admin", cached: true if (show_bi) %>
          <%= render "login_pit", cached: true %>
          <%= render "login_intranet", cached: true %>
          <%= render "login_szkolenia", cached: true %>
          <%= render "login_netpar2015", cached: true %>
          <%= render "login_pola", cached: true %>
          <%= render "login_egzaminy", cached: true %>

        <% else %>

          <%= render "login_test_csuext", cached: true  if (show_bi) %>
          <%= render "login_test_esod", cached: true %>
          <%= render "login_test_esod_admin", cached: true if (show_bi) %> 
          <%= render "login_test_pue", cached: true %>
          <%= render "login_test_pue_adm", cached: true if (show_bi) %>
          <%= render "login_test_cbo_admin", cached: true if (show_bi) %>
          <%= render "login_test_pit", cached: true %>
          <%= render "login_test_intranet", cached: true %>
          <%= render "login_test_netpar2015", cached: true %>
          <%= render "login_test_pola", cached: true %>
          <%= render "login_test_egzaminy", cached: true %>

        <% end %>

      </ul>
    </div>

    <div class="col-sm-6 bg-uke-noauthorization">
      <br>
      <h3 class="center"><%= fa_icon('lock-open', text: ' Systemy bez autoryzacji' ) %></h3>

      <ul class="timeline">

        <%= render "nologin_legalis", cached: true %>
        <%= render "nologin_amator", cached: true %>
        <%= render "nologin_wyszukiwarka", cached: true %>
        <%= render "nologin_confirmation", cached: true %>
        <%= render "nologin_mapbook", cached: true %>
        <%= render "nologin_numeracja", cached: true %>

      </ul>
  </div>

</div>


<hr>


